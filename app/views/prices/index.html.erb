<p id="notice"><%= notice %></p>

<h1>Список цін</h1>

<table class='table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>  
        <td><%=number_to_currency(price.price,unit: "грн.", separator: ",", delimiter: "", format: "%n %u")%></td>
        <%- if price.product.nil? %>
          <td> no product</td>
        <%else%>
          <td><%=price.product.name%></td>
        <%end%>

        <%- if price.brand.nil? %>
          <td> no brand</td>
        <%else%>
          <td><%=price.brand.name%></td>
        <%end%>

        <%- if price.city.nil? %>
          <td> no city</td>
        <%else%>
          <td><%=price.city.name%></td>
        <%end%>

        <%- if price.place.nil? %>
          <td> no place</td>
        <%else%>
          <td><%=price.place.name%></td>
        <%end%>

        <%- if price.date.nil? %>
          <td> no date</td>
        <%else%>
          <td><%=price.date%></td>
        <%end%>
             

        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_price_path %>

<%= paginate @prices %>